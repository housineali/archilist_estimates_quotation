                        </div>
                        <group groups="archilist_estimates_quotation.real_state_user">
                            <field name="user_id" readonly="True"/>
                        </group>

                        <group string="Client Property Info">
                            <group>
                                <field name="property_type_id" required="True"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="finishing_type_id" required="True"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="client_expected_start" required="True"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="client_expected_end" required="True"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="client_expected_duration" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="property_area" required="True"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                        </group>
                        <group string="Estimations" attrs="{'invisible':[('state','in',['draft','rejected'])]}">
                            <group>
                                <field name="estimated_budget" attrs="{'readonly':[('state','!=','to_review')]}"/>
                                <field name="user_estimated_duration"/>
                            </group>
                            <group>
                                <field name="user_estimated_start" attrs="{'readonly':[('state','!=','to_review')]}"/>
                                <field name="user_estimated_end" attrs="{'readonly':[('state','!=','to_review')]}"/>
                            </group>
                        </group>


                        <notebook>
                            <page string="Accepted Quotations"
                                  attrs="{'invisible':[('state','not in',['waiting_final_offer','quotation'])]}">
                                <field name="accepted_quotations_ids">
                                    <tree readonly="True">
                                        <field name="vendor_estimated_start" readonly="1"/>
                                        <field name="vendor_estimated_end" readonly="1"/>
                                        <field name="vendor_estimated_duration" readonly="1"/>
                                        <field name="vendor_estimated_cost" readonly="1"/>
                                        <field name="vendor_notes" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Interior">
                                <group>
                                    <group>
                                        <field name="rooms_no" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="rooms_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="bedroom_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="living_rooms_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="rooms_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="reception_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="office_space_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="lobby_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                    </group>
                                    <group>
                                        <field name="toilets_no" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="toilets_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="counter_bar_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="corridor_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="stair_case_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="balcony_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                    </group>
                                </group>
                                <field name="interior_product_ids" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create':True}"
                                               domain="[('interior','=',True)]" required="1"/>
                                        <field name="amount" required="1"/>
                                        <field name="uom_id" options="{'no_create':True}" required="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Exterior">
                                <group>
                                    <group>
                                        <field name="building_facades_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="building_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="garage_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="walls_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                    </group>
                                    <group>
                                        <field name="entrance_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="gates_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="outdoor_stairs_area" required="True"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                    </group>
                                </group>
                                <field name="exterior_product_ids" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create':True}"
                                               domain="[('exterior','=',True)]" required="1"/>
                                        <field name="amount" required="1"/>
                                        <field name="uom_id" options="{'no_create':True}" required="1"/>
                                    </tree>
                                </field>

                            </page>
                            <page string="Outdoor">
                                <group>
                                    <group>
                                        <field name="facedes_elements" required="1"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="walk_ways_area" required="1"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="greens_area" required="1"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                    </group>
                                    <group>
                                        <field name="pools_area" required="1"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="sheds_area" required="1"
                                               attrs="{'readonly':[('state','!=','draft')]}"/>
                                    </group>
                                </group>
                                <field name="outdoor_product_ids" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create':True}"
                                               domain="[('outdoor','=',True)]" required="1"/>
                                        <field name="amount" required="1"/>
                                        <field name="uom_id" options="{'no_create':True}" required="1"/>
                                    </tree>
                                </field>

                            </page>
                            <page string="Notes">
                                <group>
                                    <field name="client_notes" placeholder="Please write any comment or note"
